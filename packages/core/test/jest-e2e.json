{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleDirectories": ["<rootDir>/../", "node_modules"],
  "setupFilesAfterEnv": ["jest-sorted"],
  "maxWorkers": 1,
  "bail": 1,
  "testTimeout": 45000,
  "verbose": false,
  "silent": false,
  "forceExit": true,
  "globalTeardown": "./utils/jest-global-teardown.js",
  "coverageDirectory": "./coverage-e2e",
  "collectCoverageFrom": ["src/**/{!(console|main|*.spec|*.command),}.ts"]
}
